<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeranfuenMirrorSync.Test"
        xmlns:ViewModels="clr-namespace:SeranfuenMirrorSync.Test.ViewModels" x:Class="SeranfuenMirrorSync.Test.WndTestMirrorSync"
        mc:Ignorable="d"
        Title="Source to Mirror Sync Test" Height="500" Width="1000">
    <Window.DataContext>
        <ViewModels:TestMirrorSyncViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Source Folder" Margin="5" />
            <TextBox x:Name="SourceTextBox" Grid.Column="1" Height="21" VerticalAlignment="Top" Margin="5" Text="{Binding SourcePath}" />
            <Label Grid.Column="2" Content="Mirror Folder" Margin="5" />
            <TextBox x:Name="MirrorTextBox" Grid.Column="3" Height="21" VerticalAlignment="Top" Margin="5" Text="{Binding MirrorPath}" />
        </Grid>
        <Label Grid.Row="1" x:Name="StatusLabel" Content="{Binding Status}" VerticalContentAlignment="Center" Margin="5" />
        <DataGrid Grid.Row="2" Margin="10" ItemsSource="{Binding FileSyncActions}" />
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Run Sync" Margin="10" Padding="10,5" Click="CmdRun_Click" />
            <Button Content="Close" Margin="10" Padding="10,5" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
